    <script>
        // Global Variables
        let currentUser = null;
        let isAdmin = false;
        let isMasterAdmin = false;
        let editModeEnabled = false;
        let currentSlide = { hero: 0 };
        let portfolioItems = [];
        let uploadedFiles = [];
        let apiConfig = {
            endpoint: '',
            key: '',
            model: 'gpt-4',
            baseRate: 50,
            markup: 20
        };

        // Master Admin Credentials
        const MASTER_ADMIN = {
            email: 'admin@refitservices.com',
            password: 'refit2024master'
        };

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            initializeWebsite();
            loadSettings();
            checkLoginStatus();
            setupEventListeners();
            initializePortfolio();
            initializeSliders();
            
            // Check for mobile
            if (window.innerWidth <= 768) {
                document.querySelector('.mcp-mobile-toggle').style.display = 'flex';
            }
        });

        // Initialize Website
        function initializeWebsite() {
            // Load saved settings from localStorage
            const savedSettings = localStorage.getItem('refitSettings');
            if (savedSettings) {
                const settings = JSON.parse(savedSettings);
                applySettings(settings);
            }
        }

        // Load Settings
        function loadSettings() {
            const settings = JSON.parse(localStorage.getItem('refitSettings') || '{}');
            
            // Apply saved colors
            if (settings.primaryColor) {
                document.documentElement.style.setProperty('--primary-pink', settings.primaryColor);
            }
            if (settings.darkPrimaryColor) {
                document.documentElement.style.setProperty('--primary-dark-pink', settings.darkPrimaryColor);
            }
            
            // Apply API configuration
            if (settings.apiConfig) {
                apiConfig = settings.apiConfig;
            }
        }

        // Apply Settings
        function applySettings(settings) {
            if (settings.siteTitle) {
                document.title = settings.siteTitle;
            }
            
            if (settings.logoText) {
                document.getElementById('logoText').textContent = settings.logoText;
            }
            
            if (settings.heroTitle) {
                document.getElementById('heroTitleElement').textContent = settings.heroTitle;
            }
            
            if (settings.heroTagline) {
                document.getElementById('heroTaglineElement').textContent = settings.heroTagline;
            }
            
            if (settings.heroDescription) {
                document.getElementById('heroDescElement').textContent = settings.heroDescription;
            }
        }

        // Toggle Master Control Panel
        function toggleMasterPanel() {
            if (!isMasterAdmin) {
                showNotification('Access Denied', 'Master admin access required', 'error');
                return;
            }
            
            const panel = document.getElementById('masterControlPanel');
            panel.classList.toggle('active');
        }

        // Login Function
        function login() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            if (email === MASTER_ADMIN.email && password === MASTER_ADMIN.password) {
                currentUser = { email: email, name: 'Master Admin' };
                isMasterAdmin = true;
                isAdmin = true;
                loginSuccess();
                
                // Show mobile toggle for master admin
                document.querySelector('.mcp-mobile-toggle').style.display = 'flex';
                
                showNotification('Welcome', 'Master Admin access granted', 'success');
            } else if (email && password) {
                currentUser = { email: email, name: 'Customer' };
                isAdmin = false;
                isMasterAdmin = false;
                loginSuccess();
            } else {
                showNotification('Error', 'Please enter valid credentials', 'error');
            }
        }

        // Login Success
        function loginSuccess() {
            closeModal('loginModal');
            document.getElementById('loginBtn').textContent = currentUser.name;
            
            if (isAdmin && !isMasterAdmin) {
                document.getElementById('adminNavLink').style.display = 'block';
            }
        }

        // Check Login Status
        function checkLoginStatus() {
            const savedUser = localStorage.getItem('currentUser');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                if (currentUser.email === MASTER_ADMIN.email) {
                    isMasterAdmin = true;
                    isAdmin = true;
                    document.querySelector('.mcp-mobile-toggle').style.display = 'flex';
                }
                document.getElementById('loginBtn').textContent = currentUser.name;
            }
        }

        // Toggle Edit Mode
        function toggleEditMode() {
            const editModeSelect = document.getElementById('editMode');
            editModeEnabled = editModeSelect.value === 'on';
            
            document.body.classList.toggle('edit-mode', editModeEnabled);
            
            if (editModeEnabled) {
                enableContentEditing();
                showNotification('Edit Mode', 'Content editing enabled. Click on any element to edit.', 'info');
            } else {
                disableContentEditing();
                showNotification('Edit Mode', 'Content editing disabled', 'info');
            }
        }

        // Enable Content Editing
        function enableContentEditing() {
            const editables = document.querySelectorAll('.editable');
            editables.forEach(element => {
                element.setAttribute('contenteditable', 'true');
                element.addEventListener('blur', saveEditedContent);
                
                // Add edit indicator
                const indicator = document.createElement('div');
                indicator.className = 'edit-indicator';
                indicator.innerHTML = 'âœï¸';
                element.appendChild(indicator);
            });
            
            // Enable media editing
            const editableMedia = document.querySelectorAll('.editable-media');
            editableMedia.forEach(media => {
                media.style.cursor = 'pointer';
                media.addEventListener('click', replaceMedia);
            });
        }

        // Disable Content Editing
        function disableContentEditing() {
            const editables = document.querySelectorAll('.editable');
            editables.forEach(element => {
                element.setAttribute('contenteditable', 'false');
                element.removeEventListener('blur', saveEditedContent);
                
                // Remove edit indicator
                const indicator = element.querySelector('.edit-indicator');
                if (indicator) {
                    indicator.remove();
                }
            });
            
            // Disable media editing
            const editableMedia = document.querySelectorAll('.editable-media');
            editableMedia.forEach(media => {
                media.style.cursor = 'default';
                media.removeEventListener('click', replaceMedia);
            });
        }

        // Save Edited Content
        function saveEditedContent(event) {
            const element = event.target;
            const content = element.textContent;
            
            // Save to localStorage
            const elementId = element.id || element.className;
            localStorage.setItem(`content_${elementId}`, content);
            
            showNotification('Saved', 'Content updated successfully', 'success');
        }

        // Replace Media
        function replaceMedia(event) {
            if (!editModeEnabled) return;
            
            const media = event.target;
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*,video/*';
            
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        media.src = e.target.result;
                        localStorage.setItem(`media_${media.alt}`, e.target.result);
                        showNotification('Media Updated', 'Media replaced successfully', 'success');
                    };
                    reader.readAsDataURL(file);
                }
            };
            
            input.click();
        }

        // Update Theme Color
        function updateThemeColor() {
            const primaryColor = document.getElementById('primaryColor').value;
            const darkPrimaryColor = document.getElementById('darkPrimaryColor').value;
            
            document.documentElement.style.setProperty('--primary-pink', primaryColor);
            document.documentElement.style.setProperty('--primary-dark-pink', darkPrimaryColor);
            document.documentElement.style.setProperty('--gradient-pink', `linear-gradient(135deg, ${primaryColor} 0%, ${darkPrimaryColor} 100%)`);
            
            // Save to settings
            const settings = JSON.parse(localStorage.getItem('refitSettings') || '{}');
            settings.primaryColor = primaryColor;
            settings.darkPrimaryColor = darkPrimaryColor;
            localStorage.setItem('refitSettings', JSON.stringify(settings));
        }

        // Toggle Logo Type
        function toggleLogoType() {
            const logoType = document.getElementById('logoType').value;
            const textControl = document.getElementById('logoTextControl');
            const imageControl = document.getElementById('logoImageControl');
            
            if (logoType === 'text') {
                textControl.style.display = 'block';
                imageControl.style.display = 'none';
                document.getElementById('logoText').style.display = 'block';
                document.getElementById('logoImage').style.display = 'none';
            } else {
                textControl.style.display = 'none';
                imageControl.style.display = 'block';
                document.getElementById('logoText').style.display = 'none';
                document.getElementById('logoImage').style.display = 'block';
            }
        }

        // Update Logo
        function updateLogo() {
            const logoType = document.getElementById('logoType').value;
            
            if (logoType === 'text') {
                const logoText = document.getElementById('logoTextInput').value;
                document.getElementById('logoText').textContent = logoText;
                
                // Save to settings
                const settings = JSON.parse(localStorage.getItem('refitSettings') || '{}');
                settings.logoText = logoText;
                localStorage.setItem('refitSettings', JSON.stringify(settings));
            } else {
                const fileInput = document.getElementById('logoImageInput');
                const file = fileInput.files[0];
                
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        document.getElementById('logoImage').src = e.target.result;
                        document.getElementById('logoImage').classList.add('active');
                        document.getElementById('logoText').classList.add('hidden');
                        
                        // Save to settings
                        const settings = JSON.parse(localStorage.getItem('refitSettings') || '{}');
                        settings.logoImage = e.target.result;
                        localStorage.setItem('refitSettings', JSON.stringify(settings));
                    };
                    reader.readAsDataURL(file);
                }
            }
            
            showNotification('Logo Updated', 'Logo has been updated successfully', 'success');
        }

        // Update Hero Content
        function updateHeroContent() {
            const heroTitle = document.getElementById('heroTitle').value;
            const heroTagline = document.getElementById('heroTagline').value;
            const heroDescription = document.getElementById('heroDescription').value;
            
            document.getElementById('heroTitleElement').textContent = heroTitle;
            document.getElementById('heroTaglineElement').textContent = heroTagline;
            document.getElementById('heroDescElement').textContent = heroDescription;
            
            // Save to settings
            const settings = JSON.parse(localStorage.getItem('refitSettings') || '{}');
            settings.heroTitle = heroTitle;
            settings.heroTagline = heroTagline;
            settings.heroDescription = heroDescription;
            localStorage.setItem('refitSettings', JSON.stringify(settings));
            
            showNotification('Hero Updated', 'Hero section content updated successfully', 'success');
        }

        // Save Site Settings
        function saveSiteSettings() {
            const settings = {
                siteTitle: document.getElementById('siteTitle').value,
                siteTagline: document.getElementById('siteTagline').value,
                primaryColor: document.getElementById('primaryColor').value,
                darkPrimaryColor: document.getElementById('darkPrimaryColor').value
            };
            
            document.title = settings.siteTitle + ' - ' + settings.siteTagline;
            updateThemeColor();
            
            const allSettings = JSON.parse(localStorage.getItem('refitSettings') || '{}');
            Object.assign(allSettings, settings);
            localStorage.setItem('refitSettings', JSON.stringify(allSettings));
            
            showNotification('Settings Saved', 'Site settings have been updated', 'success');
        }

        // Save API Configuration
        function saveAPIConfig() {
            apiConfig = {
                endpoint: document.getElementById('apiEndpoint').value,
                key: document.getElementById('apiKey').value,
                model: document.getElementById('aiModel').value,
                baseRate: parseFloat(document.getElementById('baseRate').value),
                markup: parseFloat(document.getElementById('markupPercentage').value)
            };
            
            const settings = JSON.parse(localStorage.getItem('refitSettings') || '{}');
            settings.apiConfig = apiConfig;
            localStorage.setItem('refitSettings', JSON.stringify(settings));
            
            showNotification('API Configuration Saved', 'AI quotation settings have been updated', 'success');
        }

