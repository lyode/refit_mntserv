                setTimeout(() => {
                    showNotification('Success', 'API connection successful!', 'success');
                }, 2000);
            } catch (error) {
                showNotification('Error', 'API connection failed: ' + error.message, 'error');
            }
        }

        // Generate AI Quote
        async function generateAIQuote() {
            const name = document.getElementById('quoteName').value;
            const email = document.getElementById('quoteEmail').value;
            const phone = document.getElementById('quotePhone').value;
            const propertyType = document.getElementById('propertyType').value;
            const description = document.getElementById('projectDescription').value;
            
            if (!name || !email || !phone || !propertyType || !description) {
                showNotification('Error', 'Please fill in all required fields', 'error');
                return;
            }
            
            // Show AI processing
            document.getElementById('aiQuoteContainer').classList.add('active');
            document.getElementById('aiProcessing').style.display = 'block';
            document.getElementById('quotationDocument').style.display = 'none';
            
            // Simulate AI processing (replace with actual API call)
            setTimeout(async () => {
                try {
                    // Generate quotation with AI
                    const quotation = await generateQuotationWithAI({
                        name,
                        email,
                        phone,
                        propertyType,
                        description,
                        files: uploadedFiles
                    });
                    
                    displayQuotation(quotation);
                } catch (error) {
                    showNotification('Error', 'Failed to generate quotation: ' + error.message, 'error');
                    document.getElementById('aiProcessing').style.display = 'none';
                }
            }, 3000);
        }

        // Generate Quotation with AI
        async function generateQuotationWithAI(data) {
            // This is where you would integrate with your AI API
            // For demo purposes, we'll generate a sample quotation
            
            const quoteNumber = 'RQ-' + new Date().getFullYear() + '-' + Math.floor(Math.random() * 1000).toString().padStart(3, '0');
            const today = new Date();
            const validity = new Date(today.getTime() + 30 * 24 * 60 * 60 * 1000);
            
            // AI-based line item generation
            const items = generateQuoteItems(data.description, data.propertyType);
            
            let subtotal = 0;
            items.forEach(item => {
                subtotal += item.total;
            });
            
            const sst = subtotal * 0.1;
            const total = subtotal + sst;
            
            return {
                quoteNumber,
                date: formatDate(today),
                validity: formatDate(validity),
                client: {
                    name: data.name,
                    email: data.email,
                    phone: data.phone,
                    propertyType: data.propertyType
                },
                description: data.description,
                items,
                subtotal,
                sst,
                total
            };
        }

        // Generate Quote Items
        function generateQuoteItems(description, propertyType) {
            const items = [];
            const baseRate = apiConfig.baseRate || 50;
            const markup = apiConfig.markup || 20;
            
            // Base consultation
            items.push({
                description: 'Site Survey & Consultation',
                quantity: 1,
                unitPrice: 500,
                total: 500
            });
            
            // AI-based analysis (simplified for demo)
            const keywords = description.toLowerCase();
            
            if (keywords.includes('renovation')) {
                const sqft = Math.floor(Math.random() * 1000) + 500;
                const price = sqft * baseRate * (1 + markup / 100);
                items.push({
                    description: 'Interior Renovation Works',
                    quantity: sqft,
                    unitPrice: baseRate * (1 + markup / 100),
                    total: price
                });
            }
            
            if (keywords.includes('design')) {
                items.push({
                    description: '3D Design & Conceptualization',
                    quantity: 1,
                    unitPrice: 3000,
                    total: 3000
                });
            }
            
            if (keywords.includes('paint')) {
                items.push({
                    description: 'Painting Works (Labor & Materials)',
                    quantity: 1,
                    unitPrice: 4500,
                    total: 4500
                });
            }
            
            if (keywords.includes('flooring')) {
                const sqft = Math.floor(Math.random() * 800) + 400;
                items.push({
                    description: 'Flooring Installation',
                    quantity: sqft,
                    unitPrice: 20,
                    total: sqft * 20
                });
            }
            
            // Property type specific
            if (propertyType === 'commercial') {
                items.push({
                    description: 'Commercial Grade Finishes',
                    quantity: 1,
                    unitPrice: 5000,
                    total: 5000
                });
            }
            
            // Project management
            items.push({
                description: 'Project Management & Coordination',
                quantity: 1,
                unitPrice: 2000,
                total: 2000
            });
            
            return items;
        }

