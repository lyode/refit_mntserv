                    <button class="download-pdf" onclick="downloadQuotation()">ðŸ“¥ Download PDF</button>
                    <button class="email-quote" onclick="emailQuotation()">ðŸ“§ Email Quote</button>
                    <button class="btn btn-primary" onclick="proceedToPayment()">ðŸ’³ Proceed with Payment</button>
                </div>
            `;
            
            document.getElementById('aiProcessing').style.display = 'none';
            quotationDoc.style.display = 'block';
        }

        // Format Date
        function formatDate(date) {
            const day = date.getDate().toString().padStart(2, '0');
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const year = date.getFullYear();
            return `${day}/${month}/${year}`;
        }

        // Portfolio Data
        const samplePortfolio = [
