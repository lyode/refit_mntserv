        // Initialize Portfolio
        function initializePortfolio() {
            portfolioItems = [...samplePortfolio];
            displayPortfolio('all');
        }

        // Display Portfolio Items
        function displayPortfolio(category) {
            const grid = document.getElementById('portfolioGrid');
            grid.innerHTML = '';
            
            const filtered = category === 'all' ? portfolioItems : portfolioItems.filter(item => item.category === category);
            
            filtered.forEach(item => {
                const portfolioItem = document.createElement('div');
                portfolioItem.className = 'portfolio-item';
                portfolioItem.innerHTML = `
                    <img src="${item.image}" alt="${item.title}" class="editable-media">
                    <div class="portfolio-overlay">
                        <div class="portfolio-info">
                            <h4 class="editable">${item.title}</h4>
                            <p class="editable">${getCategoryName(item.category)}</p>
                        </div>
                    </div>
                `;
                portfolioItem.onclick = () => openLightbox(item);
                grid.appendChild(portfolioItem);
            });
        }

        // Get Category Name
        function getCategoryName(category) {
            const names = {
                'commercial': 'Commercial Project',
                'residential': 'Residential Project',
                'maintenance': 'Maintenance Project',
                '3d': '3D Concept Design'
            };
            return names[category] || category;
        }

        // Filter Portfolio
        function filterPortfolio(category) {
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            displayPortfolio(category);
        }

        // Open Lightbox
        function openLightbox(item) {
            const lightbox = document.getElementById('lightbox');
            const content = document.getElementById('lightboxContent');
            
            if (item.media && item.media.length > 0) {
                let currentMediaIndex = 0;
                
                function showMedia(index) {
                    content.innerHTML = `<img src="${item.media[index]}" alt="${item.title}">`;
                }
                
                showMedia(currentMediaIndex);
                
                if (item.media.length > 1) {
                    content.innerHTML += `
                        <button class="slider-nav prev" onclick="event.stopPropagation(); changeLightboxMedia(-1)" style="position: absolute; left: 20px;">â€¹</button>
                        <button class="slider-nav next" onclick="event.stopPropagation(); changeLightboxMedia(1)" style="position: absolute; right: 20px;">â€º</button>
                    `;
                    
                    window.changeLightboxMedia = function(direction) {
                        currentMediaIndex = (currentMediaIndex + direction + item.media.length) % item.media.length;
                        showMedia(currentMediaIndex);
                    };
                }
            } else {
                content.innerHTML = `<img src="${item.image}" alt="${item.title}">`;
            }
            
            lightbox.classList.add('active');
        }

        // Close Lightbox
        function closeLightbox() {
            document.getElementById('lightbox').classList.remove('active');
        }

        // Initialize Sliders
        function initializeSliders() {
            const heroSlider = document.getElementById('heroSlider');
            const heroContainer = document.getElementById('heroSliderContainer');
            const heroSlides = heroContainer.querySelectorAll('.slide');
            const heroDots = document.getElementById('heroSliderDots');
            
            heroSlides.forEach((_, index) => {
                const dot = document.createElement('div');
                dot.className = 'slider-dot' + (index === 0 ? ' active' : '');
                dot.onclick = () => goToSlide('hero', index);
                heroDots.appendChild(dot);
            });
            
            setInterval(() => changeSlide('hero', 1), 5000);
        }

        // Change Slide
        function changeSlide(sliderId, direction) {
            const container = document.getElementById(sliderId + 'SliderContainer');
            const slides = container.querySelectorAll('.slide');
            const dots = document.getElementById(sliderId + 'SliderDots').querySelectorAll('.slider-dot');
            
            currentSlide[sliderId] = (currentSlide[sliderId] + direction + slides.length) % slides.length;
            
            container.style.transform = `translateX(-${currentSlide[sliderId] * 100}%)`;
            
            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === currentSlide[sliderId]);
            });
        }

        // Go to Specific Slide
        function goToSlide(sliderId, index) {
            const container = document.getElementById(sliderId + 'SliderContainer');
            const dots = document.getElementById(sliderId + 'SliderDots').querySelectorAll('.slider-dot');
            
            currentSlide[sliderId] = index;
            container.style.transform = `translateX(-${index * 100}%)`;
            
            dots.forEach((dot, i) => {
                dot.classList.toggle('active', i === index);
            });
        }

        // Setup Event Listeners
        function setupEventListeners() {
            // Upload Area
            const uploadArea = document.getElementById('quoteUploadArea');
            const fileInput = document.getElementById('fileInput');
            
            uploadArea.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', (e) => handleFileUpload(e, 'quote'));
            
            // Drag and Drop
            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.classList.add('dragging');
            });
            
            uploadArea.addEventListener('dragleave', () => {
                uploadArea.classList.remove('dragging');
            });
            
            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.classList.remove('dragging');
                handleFileUpload({ target: { files: e.dataTransfer.files } }, 'quote');
            });
            
            // Media Upload in Master Panel
            const mediaUpload = document.getElementById('mediaUpload');
            if (mediaUpload) {
                mediaUpload.addEventListener('change', handleMediaLibraryUpload);
            }
            
            // Window resize
            window.addEventListener('resize', () => {
                if (window.innerWidth <= 768 && isMasterAdmin) {
                    document.querySelector('.mcp-mobile-toggle').style.display = 'flex';
                } else if (window.innerWidth > 768) {
                    document.querySelector('.mcp-mobile-toggle').style.display = 'none';
                }
            });
        }

        // Handle File Upload
        function handleFileUpload(event, context) {
            const files = Array.from(event.target.files);
            const previewGrid = document.getElementById(context + 'MediaPreview');
            const uploadProgress = document.getElementById('uploadProgress');
            
            files.forEach((file, index) => {
                uploadProgress.classList.add('active');
                
                let progress = 0;
                const progressBar = document.getElementById('progressBar');
                const fileName = document.getElementById('uploadFileName');
                const percentage = document.getElementById('uploadPercentage');
                
                fileName.textContent = file.name;
                
                const interval = setInterval(() => {
                    progress += 10;
                    progressBar.style.width = progress + '%';
                    percentage.textContent = progress + '%';
                    
                    if (progress >= 100) {
                        clearInterval(interval);
                        setTimeout(() => {
                            uploadProgress.classList.remove('active');
                            createMediaPreview(file, previewGrid);
                            uploadedFiles.push(file);
                        }, 500);
                    }
                }, 100);
            });
        }

        // Create Media Preview
        function createMediaPreview(file, container) {
            const preview = document.createElement('div');
            preview.className = 'media-preview-item';
            
            const removeBtn = document.createElement('button');
            removeBtn.className = 'media-remove-btn';
            removeBtn.innerHTML = 'Ã—';
            removeBtn.onclick = () => {
                preview.remove();
                uploadedFiles = uploadedFiles.filter(f => f !== file);
            };
            
            if (file.type.startsWith('image/')) {
                const img = document.createElement('img');
                img.src = URL.createObjectURL(file);
                preview.appendChild(img);
            } else if (file.type.startsWith('video/')) {
                const video = document.createElement('video');
                video.src = URL.createObjectURL(file);
                video.controls = true;
                preview.appendChild(video);
            } else {
                const filePreview = document.createElement('div');
                filePreview.className = 'file-preview';
                filePreview.innerHTML = `
                    <div class="file-icon">ðŸ“„</div>
                    <div class="file-name">${file.name}</div>
                `;
                preview.appendChild(filePreview);
            }
            
            preview.appendChild(removeBtn);
            container.appendChild(preview);
        }

        // Handle Media Library Upload
        function handleMediaLibraryUpload(event) {
            const files = Array.from(event.target.files);
            const mediaLibrary = document.getElementById('mediaLibrary');
            
            files.forEach(file => {
                createMediaPreview(file, mediaLibrary);
            });
        }

        // Clear Media Library
        function clearMediaLibrary() {
            if (confirm('Are you sure you want to clear all media?')) {
                document.getElementById('mediaLibrary').innerHTML = '';
                showNotification('Media Cleared', 'All media files have been removed', 'success');
            }
        }

        // Export Settings
        function exportSettings() {
            const settings = JSON.parse(localStorage.getItem('refitSettings') || '{}');
            const dataStr = JSON.stringify(settings, null, 2);
            const blob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = 'refit-settings-' + new Date().toISOString().split('T')[0] + '.json';
            a.click();
            
            URL.revokeObjectURL(url);
            showNotification('Settings Exported', 'Settings have been exported successfully', 'success');
        }

        // Import Settings File
        function importSettingsFile(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const settings = JSON.parse(e.target.result);
                    localStorage.setItem('refitSettings', JSON.stringify(settings));
                    applySettings(settings);
                    loadSettings();
                    showNotification('Settings Imported', 'Settings have been imported successfully', 'success');
                    
                    // Reload to apply all settings
                    setTimeout(() => {
                        location.reload();
                    }, 1000);
                } catch (error) {
                    showNotification('Error', 'Invalid settings file', 'error');
                }
            };
            reader.readAsText(file);
        }

